{
  "name": "@goovee/orm",
  "version": "0.0.4",
  "author": "Axelor",
  "license": "SEE LICENSE IN LICENSE",
  "repository": "https://github.com/axelor/goovee-orm",
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist && tsdown",
    "dev": "pnpm build --watch",
    "release": "pnpm publish --no-git-checks",
    "test": "vitest",
    "test:e2e": "vitest --mode e2e --reporter=verbose --pool=threads --poolOptions.threads.singleThread=true --test-timeout 10000"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*/index.ts"
  },
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      },
      "./*": {
        "types": "./dist/*/index.d.ts",
        "import": "./dist/*/index.mjs",
        "require": "./dist/*/index.js"
      }
    },
    "bin": {
      "goovee": "./dist/cli/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "goovee": "./src/cli/index-dev.mjs"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.24"
  },
  "peerDependencies": {
    "graphql": "^16.8.1",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@swc/core": "^1.12.2",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.15.4",
    "@types/yargs": "^17.0.33",
    "dayjs": "^1.11.13",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
