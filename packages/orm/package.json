{
  "name": "@goovee/orm",
  "version": "0.0.1",
  "license": "MIT",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*/index.ts"
  },
  "bin": {
    "goovee": "./src/cli/index-dev.mjs"
  },
  "publishConfig": {
    "main": "./dist/index.js",
    "module": "./dist/index.ts",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      },
      "./*": {
        "types": "./dist/*/index.d.ts",
        "import": "./dist/*/index.mjs",
        "require": "./dist/*/index.js"
      }
    },
    "bin": {
      "goovee": "./dist/cli/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "lint": "eslint *.ts*",
    "test": "vitest",
    "test:e2e": "vitest --mode e2e --no-threads"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "pg": "^8.9.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.11",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@swc/core": "^1.3.32",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@types/yargs": "^17.0.22",
    "eslint": "^8.33.0",
    "eslint-config-custom": "workspace:*",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "tsconfig": "workspace:*",
    "tsup": "^6.5.0",
    "typescript": "^4.9.5",
    "vitest": "^0.28.3"
  }
}
