{
  "name": "@goovee/orm",
  "version": "0.0.2",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm build --watch",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:e2e": "vitest --mode e2e --poolOptions.threads.singleThread --test-timeout 10000"
  },
  "sideEffects": false,
  "type": "commonjs",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*/index.ts"
  },
  "publishConfig": {
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.js",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./*": {
        "types": "./dist/*/index.d.ts",
        "import": "./dist/*/index.js"
      }
    },
    "bin": {
      "goovee": "./dist/cli/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "goovee": "./src/cli/index-dev.mjs"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "peerDependencies": {
    "graphql": "^16.8.1",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@swc/core": "^1.5.0",
    "@types/node": "^20.12.7",
    "@types/pg": "^8.11.5",
    "@types/yargs": "^17.0.32",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.1"
  }
}
