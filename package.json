{
  "name": "goovee",
  "version": "0.0.4",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "pnpm --filter @goovee/* build",
    "release": "pnpm --filter @goovee/* release",
    "test": "pnpm --filter @goovee/* test",
    "test:e2e": "pnpm --filter @goovee/* test:e2e",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,css,scss,html}\""
  },
  "devDependencies": {
    "eslint": "^9.1.1",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.0.6"
}
